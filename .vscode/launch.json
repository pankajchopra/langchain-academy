    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
             "justMyCode": true,
            "env": {
                "PYTHONPATH": "${lc-academy-env}"
            }
        },
        {
            "name": "Debug main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/langraph_example/MCP Example/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/langraph_example/MCP Example",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${lc-academy-env}"
            }    
    }    
    ]
}